USE [master]
GO

/****** Object:  Database [Learn_TSQL_Delete]    Script Date: 3/16/2023 7:39:18 PM ******/
CREATE DATABASE [Learn_TSQL_Delete]
 CONTAINMENT = NONE
 ON  PRIMARY 
( NAME = N'Lean_TSQL_Delete', FILENAME = N'C:\SQLServerDataFiles\Lean_TSQL_Delete.mdf' , SIZE = 8192KB , MAXSIZE = UNLIMITED, FILEGROWTH = 65536KB )
 LOG ON 
( NAME = N'Lean_TSQL_Delete_log', FILENAME = N'C:\SQLServerLogFiles\Lean_TSQL_Delete_log.ldf' , SIZE = 8192KB , MAXSIZE = 2048GB , FILEGROWTH = 65536KB )
 WITH CATALOG_COLLATION = DATABASE_DEFAULT, LEDGER = OFF
GO

IF (1 = FULLTEXTSERVICEPROPERTY('IsFullTextInstalled'))
begin
EXEC [Learn_TSQL_Delete].[dbo].[sp_fulltext_database] @action = 'enable'
end
GO

