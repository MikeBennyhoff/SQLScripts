GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET TRUSTWORTHY OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET ALLOW_SNAPSHOT_ISOLATION OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET PARAMETERIZATION SIMPLE 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET READ_COMMITTED_SNAPSHOT OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET HONOR_BROKER_PRIORITY OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET RECOVERY FULL 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET  MULTI_USER 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET PAGE_VERIFY CHECKSUM  
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET DB_CHAINING OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET FILESTREAM( NON_TRANSACTED_ACCESS = OFF ) 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET TARGET_RECOVERY_TIME = 60 SECONDS 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET DELAYED_DURABILITY = DISABLED 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET ACCELERATED_DATABASE_RECOVERY = OFF  
GO
EXEC sys.sp_db_vardecimal_storage_format N'Learn_TSQL_InnerJoin', N'ON'
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET QUERY_STORE = ON
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET QUERY_STORE (OPERATION_MODE = READ_WRITE, CLEANUP_POLICY = (STALE_QUERY_THRESHOLD_DAYS = 30), DATA_FLUSH_INTERVAL_SECONDS = 900, INTERVAL_LENGTH_MINUTES = 60, MAX_STORAGE_SIZE_MB = 1000, QUERY_CAPTURE_MODE = AUTO, SIZE_BASED_CLEANUP_MODE = AUTO, MAX_PLANS_PER_QUERY = 200, WAIT_STATS_CAPTURE_MODE = ON)
GO
USE [Learn_TSQL_InnerJoin]
GO
/****** Object:  Table [dbo].[customers]    Script Date: 3/16/2023 6:16:29 PM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE TABLE [dbo].[customers](
	[customer_id] [int] NOT NULL,
	[customer_name] [varchar](50) NOT NULL,
	[email] [varchar](50) NOT NULL,
	[phone] [varchar](20) NOT NULL,
PRIMARY KEY CLUSTERED 
(
	[customer_id] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO
/****** Object:  Table [dbo].[items]    Script Date: 3/16/2023 6:16:29 PM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE TABLE [dbo].[items](
	[item_id] [int] NOT NULL,
	[item_name] [varchar](50) NOT NULL,
	[price] [decimal](10, 2) NOT NULL,
	[order_id] [int] NOT NULL,
PRIMARY KEY CLUSTERED 
(
	[item_id] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO
/****** Object:  Table [dbo].[orders]    Script Date: 3/16/2023 6:16:29 PM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE TABLE [dbo].[orders](
	[order_id] [int] NOT NULL,
	[order_date] [date] NOT NULL,
	[customer_id] [int] NOT NULL,
	[product_id] [int] NOT NULL,
	[total_amount] [decimal](10, 2) NOT NULL,
PRIMARY KEY CLUSTERED 
(
	[order_id] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO
/****** Object:  Table [dbo].[products]    Script Date: 3/16/2023 6:16:29 PM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE TABLE [dbo].[products](
	[product_id] [int] NOT NULL,
	[product_name] [varchar](50) NOT NULL,
	[price] [decimal](10, 2) NOT NULL,
PRIMARY KEY CLUSTERED 
(
	[product_id] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO
ALTER TABLE [dbo].[items]  WITH CHECK ADD FOREIGN KEY([order_id])
REFERENCES [dbo].[orders] ([order_id])
GO
ALTER TABLE [dbo].[orders]  WITH CHECK ADD FOREIGN KEY([customer_id])
REFERENCES [dbo].[customers] ([customer_id])
GO
ALTER TABLE [dbo].[orders]  WITH CHECK ADD FOREIGN KEY([product_id])
REFERENCES [dbo].[products] ([product_id])
GO
USE [master]
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET  READ_WRITE 
