USE [master]
GO
/****** Object:  Database [Learn_TSQL_InnerJoin]    Script Date: 3/16/2023 6:16:29 PM ******/
CREATE DATABASE [Learn_TSQL_InnerJoin]
 CONTAINMENT = NONE
 ON  PRIMARY 
( NAME = N'Learn_TSQL_InnerJoin', FILENAME = N'C:\SQLServerDataFiles\Learn_TSQL_InnerJoin.mdf' , SIZE = 8192KB , MAXSIZE = UNLIMITED, FILEGROWTH = 65536KB )
 LOG ON 
( NAME = N'Learn_TSQL_InnerJoin_log', FILENAME = N'C:\SQLServerLogFiles\Learn_TSQL_InnerJoin_log.ldf' , SIZE = 8192KB , MAXSIZE = 2048GB , FILEGROWTH = 65536KB )
 WITH CATALOG_COLLATION = DATABASE_DEFAULT, LEDGER = OFF
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET COMPATIBILITY_LEVEL = 160
GO
IF (1 = FULLTEXTSERVICEPROPERTY('IsFullTextInstalled'))
begin
EXEC [Learn_TSQL_InnerJoin].[dbo].[sp_fulltext_database] @action = 'enable'
end
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET ANSI_NULL_DEFAULT OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET ANSI_NULLS OFF 
GO
