GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET AUTO_SHRINK OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET AUTO_UPDATE_STATISTICS ON 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET CURSOR_CLOSE_ON_COMMIT OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET CURSOR_DEFAULT  GLOBAL 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET CONCAT_NULL_YIELDS_NULL OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET NUMERIC_ROUNDABORT OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET QUOTED_IDENTIFIER OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET RECURSIVE_TRIGGERS OFF 
GO
ALTER DATABASE [Learn_TSQL_InnerJoin] SET  DISABLE_BROKER 
GO
